<Window x:Class="CronosHistory.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CronosHistory"
        mc:Ignorable="d"
        Title="Cronos History" Height="350" Width="379.249">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20*"/>
            <RowDefinition Height="273*"/>
            <RowDefinition Height="27*"/>
        </Grid.RowDefinitions>
        <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.Row="1">
            <StackPanel Name="stkTiempos" />
        </ScrollViewer>
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="226*"/>
                <ColumnDefinition Width="72*"/>
                <ColumnDefinition Width="72*"/>
            </Grid.ColumnDefinitions>
            <Button x:Name="btnQuitarOOK" Grid.Column="1"  Content="Quitar" Click="btnQuitarOOK_Click"/>
            <Button x:Name="btnAñadir" Grid.Column="2" Content="Añadir" Click="btnAñadir_Click"/>
        </Grid>

    </Grid>

</Window>

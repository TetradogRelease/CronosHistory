<UserControl x:Class="CronosHistory.ItemCronos"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CronosHistory"
             xmlns:wpf="clr-namespace:Gabriel.Cat.Wpf;assembly=Gabriel.Cat.Wpf"
             mc:Ignorable="d" d:DesignWidth="300" Height="30">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="54*"/>
            <ColumnDefinition Width="133*"/>
            <ColumnDefinition Width="84*"/>
            <ColumnDefinition Width="29*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="btnHistoryOrDelete" Content="Historial" Click="btnHistoryOrDelete_Click"/>
        <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto">
            <wpf:RicoTextBox x:Name="txtNombreElemento" />
        </ScrollViewer>
        <TextBlock x:Name="txbTiempo" Grid.Column="2"/>
        <Button x:Name="btnOnOff" Content="On" Grid.Column="3" Click="btnOnOff_Click"/>
    </Grid>
</UserControl>
